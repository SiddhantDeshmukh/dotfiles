# General commands
alias pls="sudo"
alias agi="pls apt-get install"
alias agu="pls apt-get update"
alias dog="pygmentize -g -O style=native"
alias lh="ls -lh"

# Pathing
alias cdwin="cd /mnt/c/Users/siddh/"
